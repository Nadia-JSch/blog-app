<script>
  function initStarfield() {
    const canvas = document.getElementById('starfield') as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext('2d')!;
    let animationId: number;

    interface Star {
      x: number;
      y: number;
      radius: number;
      opacity: number;
      twinkleSpeed: number;
      twinkleOffset: number;
    }

    let stars: Star[] = [];

    function resize() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
      createStars();
    }

    function createStars() {
      const count = Math.floor((canvas.width * canvas.height) / 4000);
      stars = Array.from({ length: count }, () => ({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        radius: Math.random() * 1.2 + 0.3,
        opacity: Math.random() * 0.4 + 0.1,
        twinkleSpeed: Math.random() * 0.008 + 0.003,
        twinkleOffset: Math.random() * Math.PI * 2,
      }));
    }

    function getStarColor() {
      const theme = document.documentElement.getAttribute('data-theme');
      return theme === 'light' ? '148, 104, 32' : '224, 176, 96';
    }

    function draw(time: number) {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      const color = getStarColor();

      for (const star of stars) {
        const twinkle = Math.sin(time * star.twinkleSpeed + star.twinkleOffset);
        const opacity = star.opacity + twinkle * 0.15;

        ctx.beginPath();
        ctx.arc(star.x, star.y, star.radius, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(${color}, ${Math.max(0.05, opacity)})`;
        ctx.fill();
      }

      animationId = requestAnimationFrame(draw);
    }

    resize();
    animationId = requestAnimationFrame(draw);
    window.addEventListener('resize', resize);

    return () => {
      cancelAnimationFrame(animationId);
      window.removeEventListener('resize', resize);
    };
  }

  initStarfield();
</script>

<style>
  .starfield {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
  }

  .hero {
    text-align: center;
    padding: 2.5rem 0 3.5rem;
    position: relative;
  }

  .hero h1 {
    font-size: 2.8rem;
    color: var(--text-heading);
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.05rem;
    color: var(--text-light);
    max-width: 520px;
    margin: 0 auto;
    line-height: 1.8;
    text-align: left;
  }

  .sections {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .section-card {
    background: var(--bg-raised);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.6rem 1.8rem;
    text-align: left;
    transition: all 0.25s ease;
    box-shadow: var(--shadow);
    color: inherit;
  }

  .section-card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-3px);
    border-color: var(--border-hover);
    background: var(--bg-hover);
  }

  .section-card h2 {
    font-family: 'Fira Code', monospace;
    font-size: 0.95rem;
    color: var(--text-heading);
    margin-bottom: 0.35rem;
    font-weight: 500;
  }

  .section-card p {
    font-size: 0.8rem;
    color: var(--text-light);
    line-height: 1.5;
  }

  .bg-cats {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .bg-cat {
    position: absolute;
    opacity: 0.12;
    transition: opacity 0.3s;
    border: none !important;
    border-radius: 0 !important;
  }

  :global([data-theme="light"]) .bg-cat {
    opacity: 0.1;
  }

  :global([data-theme="dark"]) .bg-cats,
  :global(:not([data-theme])) .bg-cats {
    display: none;
  }

  @media (max-width: 768px) {
    .bg-cats {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .sections {
      grid-template-columns: 1fr;
    }

    .hero h1 {
      font-size: 2rem;
    }
  }
</style>
