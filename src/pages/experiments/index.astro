---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import Pagination from '../../components/Pagination.astro';

const posts = await getCollection('experiments', (p) => !p.data.draft);
const sorted = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="Experiments - pg of code">
  <header class="page-header">
    <h1>Experiments</h1>
    <p>Might be some nonsense here.</p>
  </header>

  {sorted.length > 0 ? (
    <div class="post-list">
      {sorted.map((post) => (
        <PostCard
          title={post.data.title}
          date={post.data.date}
          description={post.data.description}
          url={`/experiments/${post.id}`}
          tags={post.data.tags}
        />
      ))}
    </div>
  ) : (
    <div class="empty-state">
      <img src="/images/cats/pixel-cats-2.jpg" alt="Pixel art cats" class="empty-img" />
      <p>Nothing here yet... the cats are keeping this spot warm.</p>
    </div>
  )}

  <Pagination />
</BaseLayout>

<style>
  .empty-state {
    text-align: center;
    padding: 3rem 0;
  }

  .empty-img {
    max-width: 280px;
    border-radius: var(--radius);
    opacity: 0.85;
    margin-bottom: 1.5rem;
  }

  .empty-state p {
    color: var(--text-light);
    font-size: 1rem;
    font-style: italic;
    line-height: 1.6;
  }
</style>
