---
interface Props {
  title: string;
  date: string;
  description?: string;
  url: string;
  tags?: string[];
}

const { title, date, description, url, tags } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a href={url} class="card">
  <div class="card-row-1">
    <h3>{title}</h3>
    <div class="card-row-1-right">
      {tags && (
        <div class="card-tags">
          {tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
      <time datetime={date}>{formattedDate}</time>
    </div>
  </div>
  {description && <p class="card-row-2">{description}</p>}
</a>

<style>
  .card {
    display: block;
    border-bottom: 1px solid var(--border);
    padding: 0.85rem 0;
    transition: background 0.2s;
    color: inherit;
    text-decoration: none;
  }

  .card:hover {
    background: var(--bg-hover);
    padding-left: 0.75rem;
    margin-left: -0.75rem;
    padding-right: 0.75rem;
    margin-right: -0.75rem;
    border-radius: var(--radius);
  }

  .card-row-1 {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
  }

  .card-row-1 h3 {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-heading);
    margin: 0;
  }

  .card-row-1-right {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .card-tags {
    display: flex;
    gap: 0.4rem;
  }

  .tag {
    font-size: 0.7rem;
    color: var(--tag-text);
    opacity: 0.8;
  }

  .tag::before {
    content: '#';
  }

  .card-row-1-right time {
    font-size: 0.75rem;
    color: var(--text-light);
    white-space: nowrap;
  }

  .card-row-2 {
    font-size: 0.8rem;
    color: var(--text-light);
    line-height: 1.5;
    margin-top: 0.2rem;
  }
</style>
