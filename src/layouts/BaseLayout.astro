---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A cozy corner of the internet for learning and coding.' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-inner">
        <a href="/" class="logo">pg of code<span class="cursor">_</span></a>
        <div class="nav-right">
          <div class="nav-links">
            <a href="/til" class:list={[{ active: currentPath.startsWith('/til') }]}>~/til</a>
            <a href="/coding-notes" class:list={[{ active: currentPath.startsWith('/coding-notes') }]}>~/coding-notes</a>
            <a href="/thoughts" class:list={[{ active: currentPath.startsWith('/thoughts') }]}>~/thoughts</a>
            <a href="/experiments" class:list={[{ active: currentPath.startsWith('/experiments') }]}>~/experiments</a>
          </div>
          <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
            <span class="icon-sun">&#9788;</span>
            <span class="icon-moon">&#9790;</span>
          </button>
        </div>
      </div>
    </nav>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <p>can't wait to live in the cloud</p>
    </footer>

    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        const theme = saved || 'dark';
        document.documentElement.setAttribute('data-theme', theme);

        document.addEventListener('DOMContentLoaded', function() {
          const btn = document.getElementById('theme-toggle');
          if (!btn) return;
          btn.addEventListener('click', function() {
            const current = document.documentElement.getAttribute('data-theme');
            const next = current === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
          });
        });
      })();
    </script>
  </body>
</html>

<style>
  .nav {
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(12px);
    background: var(--nav-bg);
  }

  .nav-inner {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-family: 'Fira Code', monospace;
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-heading);
    letter-spacing: -0.02em;
  }

  .logo:hover {
    color: var(--text-heading);
    opacity: 0.8;
  }

  .logo .cursor {
    animation: blink 1s step-end infinite;
    color: var(--text-heading);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links {
    display: flex;
    gap: 1.75rem;
  }

  .theme-toggle {
    background: none;
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 0.35rem 0.5rem;
    cursor: pointer;
    font-size: 1.1rem;
    line-height: 1;
    color: var(--text-light);
    transition: all 0.2s;
  }

  .theme-toggle:hover {
    border-color: var(--text-heading);
    color: var(--text-heading);
  }

  :global([data-theme="dark"]) .icon-sun { display: inline; }
  :global([data-theme="dark"]) .icon-moon { display: none; }
  :global([data-theme="light"]) .icon-sun { display: none; }
  :global([data-theme="light"]) .icon-moon { display: inline; }
  :global(:not([data-theme])) .icon-sun { display: inline; }
  :global(:not([data-theme])) .icon-moon { display: none; }

  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-light);
    padding-bottom: 2px;
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--text-heading);
    border-bottom-color: var(--text-heading);
  }

  .main {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    min-height: calc(100vh - 160px);
  }

  .footer {
    text-align: center;
    padding: 2rem;
    color: var(--text-light);
    font-size: 0.85rem;
    border-top: 1px solid var(--border);
  }

  @media (max-width: 600px) {
    .nav-inner {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>
