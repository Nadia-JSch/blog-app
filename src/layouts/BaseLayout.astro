---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A cozy corner of the internet for learning and coding.' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-inner">
        <a href="/" class="logo">pg of code<span class="cursor">_</span></a>
        <div class="nav-right">
          <button id="menu-toggle" class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
            <span class="menu-icon"></span>
          </button>
          <div class="nav-links" id="nav-links">
            <a href="/til" class:list={[{ active: currentPath.startsWith('/til') }]}>~/til</a>
            <a href="/coding-notes" class:list={[{ active: currentPath.startsWith('/coding-notes') }]}>~/coding-notes</a>
            <a href="/thoughts" class:list={[{ active: currentPath.startsWith('/thoughts') }]}>~/thoughts</a>
            <a href="/experiments" class:list={[{ active: currentPath.startsWith('/experiments') }]}>~/experiments</a>
          </div>
          <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
            <span class="icon-sun">&#9788;</span>
            <span class="icon-moon">&#9790;</span>
          </button>
        </div>
      </div>
    </nav>

    <main class="main fade-in">
      <slot />
    </main>

    <footer class="footer">
      <nav class="footer-nav">
        <a href="/til">~/til</a>
        <a href="/coding-notes">~/coding-notes</a>
        <a href="/thoughts">~/thoughts</a>
        <a href="/experiments">~/experiments</a>
      </nav>
      <p>can't wait to live in the cloud<span class="footer-cursor">_</span></p>
      <a href="https://x.com/pgofcode" target="_blank" rel="noopener noreferrer" class="social-link">ùïè @pgofcode</a>
      <a href="#" class="back-to-top" aria-label="Back to top">&uarr; top</a>
    </footer>

    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        const theme = saved || 'dark';
        document.documentElement.setAttribute('data-theme', theme);

        document.addEventListener('DOMContentLoaded', function() {
          var btn = document.getElementById('theme-toggle');
          if (btn) {
            btn.addEventListener('click', function() {
              var current = document.documentElement.getAttribute('data-theme');
              var next = current === 'dark' ? 'light' : 'dark';
              document.documentElement.setAttribute('data-theme', next);
              localStorage.setItem('theme', next);
            });
          }

          var menuBtn = document.getElementById('menu-toggle');
          var navLinks = document.getElementById('nav-links');
          if (menuBtn && navLinks) {
            menuBtn.addEventListener('click', function() {
              var open = navLinks.classList.toggle('open');
              menuBtn.setAttribute('aria-expanded', open);
              menuBtn.classList.toggle('is-open', open);
            });
          }
        });
      })();
    </script>
  </body>
</html>

<style>
  .nav {
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(12px);
    background: var(--nav-bg);
  }

  .nav-inner {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-family: 'Fira Code', monospace;
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-heading);
    letter-spacing: -0.02em;
  }

  .logo:hover {
    animation: glitch 0.3s ease;
  }

  @keyframes glitch {
    0% { transform: translate(0); }
    10% { transform: translate(-2px, 1px); color: var(--link); }
    20% { transform: translate(2px, -1px); opacity: 0.8; }
    30% { transform: translate(-1px, -2px); color: var(--text-heading); }
    40% { transform: translate(1px, 2px); text-shadow: -2px 0 var(--link), 2px 0 var(--text-heading); }
    50% { transform: translate(-2px, 0); text-shadow: none; }
    60% { transform: translate(2px, 1px); opacity: 0.6; }
    70% { transform: translate(0, -1px); opacity: 1; }
    80% { transform: translate(-1px, 0); text-shadow: 1px 0 var(--link); }
    90% { transform: translate(1px, 1px); text-shadow: none; }
    100% { transform: translate(0); }
  }

  .logo .cursor {
    animation: blink 1s step-end infinite;
    color: var(--text-heading);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links {
    display: flex;
    gap: 1.75rem;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 0.4rem;
    cursor: pointer;
    width: 34px;
    height: 34px;
    position: relative;
  }

  .menu-icon,
  .menu-icon::before,
  .menu-icon::after {
    display: block;
    width: 18px;
    height: 2px;
    background: var(--text-light);
    border-radius: 1px;
    transition: all 0.25s ease;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .menu-icon {
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .menu-icon::before {
    content: '';
    top: -6px;
  }

  .menu-icon::after {
    content: '';
    top: 6px;
  }

  .menu-toggle.is-open .menu-icon {
    background: transparent;
  }

  .menu-toggle.is-open .menu-icon::before {
    top: 0;
    transform: translateX(-50%) rotate(45deg);
  }

  .menu-toggle.is-open .menu-icon::after {
    top: 0;
    transform: translateX(-50%) rotate(-45deg);
  }

  .theme-toggle {
    background: none;
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 0.35rem 0.5rem;
    cursor: pointer;
    font-size: 1.1rem;
    line-height: 1;
    color: var(--text-light);
    transition: all 0.2s;
  }

  .theme-toggle:hover {
    border-color: var(--text-heading);
    color: var(--text-heading);
  }

  :global([data-theme="dark"]) .icon-sun { display: inline; }
  :global([data-theme="dark"]) .icon-moon { display: none; }
  :global([data-theme="light"]) .icon-sun { display: none; }
  :global([data-theme="light"]) .icon-moon { display: inline; }
  :global(:not([data-theme])) .icon-sun { display: inline; }
  :global(:not([data-theme])) .icon-moon { display: none; }

  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-light);
    padding-bottom: 2px;
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--text-heading);
    border-bottom-color: var(--text-heading);
  }

  .main {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    min-height: calc(100vh - 160px);
  }

  .footer {
    text-align: center;
    padding: 2.5rem 1.5rem;
    color: var(--text-light);
    font-size: 0.85rem;
    border-top: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .footer-nav {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-nav a {
    font-size: 0.82rem;
    color: var(--text-light);
    transition: color 0.2s;
  }

  .footer-nav a:hover {
    color: var(--text-heading);
  }

  .back-to-top {
    font-size: 0.78rem;
    color: var(--text-light);
    border: 1px solid var(--border);
    padding: 0.3rem 0.75rem;
    border-radius: 999px;
    transition: all 0.2s;
  }

  .back-to-top:hover {
    color: var(--text-heading);
    border-color: var(--border-hover);
  }

  .social-link {
    font-size: 0.82rem;
    color: var(--text-light);
    transition: color 0.2s;
  }

  .social-link:hover {
    color: var(--text-heading);
  }

  .footer-cursor {
    animation: blink 1s step-end infinite;
  }

  @media (max-width: 640px) {
    .menu-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--nav-bg);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid var(--border);
      padding: 0.75rem 1.5rem 1rem;
      gap: 0.5rem;
    }

    .nav-links.open {
      display: flex;
    }

    .nav-links a {
      padding: 0.5rem 0;
      border-bottom: none;
    }

    .nav-right {
      gap: 0.75rem;
    }
  }
</style>
