---
import BaseLayout from './BaseLayout.astro';
import TableOfContents from '../components/TableOfContents.astro';

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  frontmatter: {
    title: string;
    date: string;
    description?: string;
    tags?: string[];
    image?: string;
    section?: string;
  };
  headings?: Heading[];
}

const { frontmatter, headings = [] } = Astro.props;
const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
const pathname = Astro.url.pathname;
const section = pathname.split('/').filter(Boolean)[0] || '';
const sectionLabels: Record<string, string> = {
  'til': 'Today I Learned',
  'coding-notes': 'Coding Notes',
  'thoughts': 'Thoughts',
  'experiments': 'Experiments',
};
const sectionLabel = sectionLabels[section] || '';
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  {sectionLabel && (
    <nav class="breadcrumb">
      <a href={`/${section}`}>~/{section}</a>
      <span class="breadcrumb-sep">/</span>
      <span class="breadcrumb-current">{frontmatter.title}</span>
    </nav>
  )}
  <article class="post">
    {frontmatter.image && (
      <img src={frontmatter.image} alt="" class="hero-image" />
    )}
    <header class="post-header">
      <h1>{frontmatter.title}</h1>
      <div class="post-meta">
        <time datetime={frontmatter.date}>{formattedDate}</time>
        {frontmatter.tags && (
          <div class="tags">
            {frontmatter.tags.map((tag: string) => (
              <a href={`/tags/${tag}`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </div>
    </header>
    <div class="post-content">
      <slot />
    </div>
    <hr />
    <footer class="post-footer">
      {sectionLabel && (
        <a href={`/${section}`} class="footer-back">&larr; Back to {sectionLabel}</a>
      )}
    </footer>
  </article>
</BaseLayout>

{headings.length > 0 && (
  <aside class="toc-sidebar">
    <TableOfContents headings={headings} />
  </aside>
)}

<style is:global>
  .toc-sidebar {
    display: none;
  }

  @media (min-width: 1080px) {
    .toc-sidebar {
      display: block;
      position: fixed;
      top: 5rem;
      left: calc(50% + 400px + 2rem);
      width: 180px;
      max-height: calc(100vh - 6rem);
      overflow-y: auto;
    }
  }
</style>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-family: 'Fira Code', monospace;
    font-size: 0.82rem;
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: var(--text-light);
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: var(--text-heading);
  }

  .breadcrumb-sep {
    color: var(--text-light);
    opacity: 0.4;
  }

  .breadcrumb-current {
    color: var(--text-light);
    opacity: 0.6;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .post-footer {
    padding-top: 1rem;
  }

  .footer-back {
    font-size: 0.85rem;
    color: var(--text-light);
    transition: color 0.2s;
  }

  .footer-back:hover {
    color: var(--text-heading);
  }

  .hero-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: var(--radius);
    margin-bottom: 2rem;
    border: 1px solid var(--border);
  }

  .post-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
  }

  .post-header h1 {
    font-size: 1.75rem;
    color: var(--text-heading);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .post-meta time {
    font-size: 0.85rem;
    color: var(--text-light);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--tag-bg);
    color: var(--tag-text);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 500;
    transition: all 0.2s;
    border: 1px solid transparent;
  }

  .tag:hover {
    background: var(--tag-bg-hover);
    color: var(--tag-text-hover);
    border-color: var(--tag-text-hover);
  }

  .post-content {
    font-size: 1rem;
    line-height: 1.8;
  }

  .post-content :global(h1) {
    font-size: 1.5rem;
    color: var(--text-heading);
    margin: 2.5rem 0 0.75rem;
    letter-spacing: -0.02em;
  }

  .post-content :global(h2) {
    font-size: 1.3rem;
    color: var(--text-heading);
    margin: 2rem 0 0.75rem;
    letter-spacing: -0.01em;
  }

  .post-content :global(h3) {
    font-size: 1.1rem;
    color: var(--text-heading);
    margin: 1.5rem 0 0.5rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.4rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.4rem;
  }
</style>
